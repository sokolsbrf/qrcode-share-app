<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <selector android:constantSize="true">
            <item android:state_pressed="true">
                <shape android:shape="oval">
                    <solid android:color="?colorAccent" />
                    <size android:width="@dimen/share_button"
                        android:height="@dimen/share_button" />
                </shape>
            </item>

            <item>
                <shape android:shape="oval">
                    <solid android:color="?colorPrimary" />
                    <size android:width="@dimen/share_button"
                        android:height="@dimen/share_button" />
                </shape>
            </item>
        </selector>
    </item>

    <item android:drawable="@drawable/ic_share_black_24dp"
        android:height="@dimen/share_icon"
        android:width="@dimen/share_icon"
        android:gravity="center"
        />

</layer-list>